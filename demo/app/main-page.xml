<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded"
  xmlns:js="nativescript-joystick">
  <StackLayout>
    <Button text="testMe" tap="{{testMe}}" />

    <Label text="JoyStick" class="message" textWrap="true"/>

    <Label text="{{'Angle Left:' + angleLeft}}" textWrap="true" />
    <Label text="{{'Power Left:' + powerLeft}}" textWrap="true" />

    <Label text="{{'Angle Right:' + angleRight}}" textWrap="true" />
    <Label text="{{'Power Right:' + powerRight}}" textWrap="true" />

    <Label text="{{ 'Left Horizontal:' + horizontal }}" />
    <Label text="{{ 'Left Vertical:' + vertical }}" />

    <StackLayout orientation="horizontal">
      <js:JoyStick
        padColor="green"
        buttonColor="pink"
        width="200"
        height="200"
        angle="{{angleLeft}}"
        horizontal="{{horizontal}}"
        vertical="{{vertical}}"
        power="{{powerLeft}}"></js:JoyStick>
      <js:JoyStick
        padColor="black"
        buttonColor="white"
        width="40%"
        angle="{{angleRight}}" 
        power="{{powerRight}}"></js:JoyStick>
    </StackLayout>
  </StackLayout>
</Page>